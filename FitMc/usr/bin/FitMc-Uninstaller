#!/bin/bash

#ask
zenity --question --text "Are you shure you wish to uninstall FitMc?"
if [ "$?" == "0" ] ; then
	#stop Java
	killall java
	killall -9 java

	#Remove FitMc folder
	rm -rv $HOME/Games/FitMc/

	#Remove Technic dot folder
	zenity --question --text "Would you like to remove .technic folder as well?
This will delete all saved files"
		if [ "$?" == "0" ] ; then
			rm -rv ~/.technic/
		fi

	#Remove FitMc
	xterm -title 'Uninstall FitMc' -e "sudo rm /usr/share/xsessions/FitMc.desktop && sudo rm /usr/share/unity-greeter/FitMc.png && sudo rm /usr/share/pixmaps/FitMc-logo.png && sudo rm /usr/share/pixmaps/FitMc-logo-Uninstaller.png && sudo rm /usr/share/applications/FitMc.desktop && sudo rm /usr/share/applications/Uninstall-FitMc.desktop  && sudo rm /usr/bin/FitMc && sudo rm /usr/bin/FitMc-Uninstaller"
#Done
zenity --timeout=4 --info --text "FitMc was succesfully uninstalled"

else
zenity --timeout=4 --info --text "Exiting without uninstalling"
fi
